<%= link_to "Home", root_path %>

<h1>Application Form</h1>

<%= form_for @user_app, url: user_apps_path, :html => {:multipart => true}  do |f| %>

 <p>
 	 <b><%= f.label :course_1 %></b>
    <%= f.text_field :course_one %>
 </p>

 <p>
 	<b><%= f.label :Course_2 %></b>
    <%= f.text_field :course_two %>
 </p>

 <p>
 	<b><%= f.label :Course_3 %></b>
    <%= f.text_field :course_three %>
 </p>

 <p>
 	<b>PLE Certificate:</b>
    <%= f.file_field :ple_certificate %>
 </p>

 <p>
 	<b>UCE Certificate:</b>
    <%= f.file_field :uce_certificate %>
 </p>

 <p>
 	<b>UACE Certificate:</b> 
    <%= f.file_field :uace_certificate %>
 </p>

 <p>
  <%= f.submit "Save My Application"  %>
 </p> 

<% end %>

